{
  "compilerOptions": {
    "pretty": true,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "allowJs": true,
    "jsx": "preserve",
    "lib": ["dom", "es6", "esnext"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["@cloudflare/workers-types"]
  },
  "exclude": [
    "**/*.spec.ts",
    "sample/**/*.ts",
    "e2e"
  ]
}
